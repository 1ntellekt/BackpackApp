<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">
         <RelativeLayout
             android:layout_marginBottom="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/top_draw" />

             <TextView
                 android:id="@+id/tvName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentStart="true"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="15dp"
                 android:text="Название учебника"
                 android:textSize="15sp" />

             <TextView
                 android:id="@+id/subName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvName"
                 android:layout_alignParentStart="true"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="15dp"
                 android:text="Название предмета"
                 android:textSize="14sp" />

             <TextView
                 android:id="@+id/tvClass"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_marginTop="15dp"
                 android:layout_marginEnd="15dp"
                 android:text="Класс"
                 android:textSize="17sp" />

             <ImageButton
                 android:id="@+id/btnDownload"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvClass"
                 android:layout_alignParentEnd="true"
                 android:layout_marginTop="27dp"
                 android:layout_marginEnd="10dp"
                 android:background="@drawable/btn_micro"
                 android:src="@drawable/ic_baseline_file_download_24" />

             <ImageButton
                 android:id="@+id/btnEdit"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvClass"
                 android:layout_marginTop="27dp"
                 android:layout_marginEnd="10dp"
                 android:layout_toStartOf="@id/btnDelete"
                 android:background="@drawable/btn_micro"
                 android:src="@drawable/ic_baseline_edit_24" />

             <ImageButton
                 android:id="@+id/btnDelete"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/tvClass"
                 android:layout_marginTop="27dp"
                 android:layout_marginEnd="10dp"
                 android:layout_toStartOf="@id/btnDownload"
                 android:background="@drawable/btn_micro"
                 android:src="@drawable/ic_baseline_delete_24" />
         </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>